<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainRelativeLayout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              class="com.google.android.gms.maps.MapFragment"/>

    <ImageButton
        android:id="@+id/zoomInButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/map_plus"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/neutral_zoom_right"
        android:layout_marginTop="38dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:id="@+id/zoomOutButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/map_minus"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/neutral_zoom_right"
        android:layout_marginTop="108dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/map_refresh"
        android:alpha="0.3"
        android:layout_marginLeft="@dimen/neutral_refresh_left"
        android:layout_marginTop="38dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/searchKeyText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="35dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dip"
        android:visibility="gone"
        android:shadowColor="@color/white"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLength="60"
        android:textColor="@color/blue"
        />

    <ImageButton
        android:id="@+id/searchKeyCancelButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/map_cancel"
        android:layout_toRightOf="@id/searchKeyText"
        android:layout_marginBottom="39dip"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/searchKeyCancelClickableArea"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#0000"
        android:layout_toRightOf="@id/searchKeyText"
        android:layout_marginBottom="29dip"
        android:padding="20dip"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/sourceText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="7dip"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLength="60"
        android:textColor="@color/red"
        />

    <ImageButton
        android:id="@+id/sourceCancelButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/map_cancel"
        android:layout_toRightOf="@id/sourceText"
        android:layout_marginBottom="13dip"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/sourceCancelClickableArea"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#0000"
        android:layout_toRightOf="@id/sourceText"
        android:layout_marginBottom="0dip"
        android:padding="20dip"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        />

    <!--
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>-->

</RelativeLayout>